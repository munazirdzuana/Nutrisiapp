<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgrap"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/splasFragment"
        android:name="com.munaz.nutrisiapp.SplasFragment"
        android:label="fragment_splas"
        tools:layout="@layout/fragment_splas" >
        <action
            android:id="@+id/action_splasFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splasFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.munaz.nutrisiapp.ui.login.loginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.munaz.nutrisiapp.ui.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@android:anim/slide_out_right"
            app:exitAnim="@android:anim/slide_in_left"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.munaz.nutrisiapp.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home"/>
    <fragment
        android:id="@+id/rekomenFragment"
        android:name="com.munaz.nutrisiapp.ui.rekomendMakan.rekomenFragment"
        android:label="fragment_rekomen"
        tools:layout="@layout/fragment_rekomen" />
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.munaz.nutrisiapp.ui.favMakanan.FavoriteFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_favorite"/>
    <fragment
        android:id="@+id/akunFragment"
        android:name="com.munaz.nutrisiapp.ui.akun.AkunFragment"
        android:label="fragment_akun"
        tools:layout="@layout/fragment_akun"/>
</navigation>